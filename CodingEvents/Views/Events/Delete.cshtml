@{
}


<h1>Delete Events</h1>

@if (ViewBag.events.Count == 0)
{
    <p>No events yet!</p>
}
<form method="post">
    @foreach (var evt in ViewBag.events)
    {
        <div class="form-group">
            <label>
                <span>@evt.Name</span>
                <input type="checkbox" value="@evt.Id" name="eventIds" />
            </label>
        </div>
    }
    <input type="submit" value="Delete Selected Events" class="btn btn-danger">
</form>