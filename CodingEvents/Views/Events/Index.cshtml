<table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Date</th>
        </tr>
        @foreach (var evt in ViewBag.events)
        {
<tr>
    <td>@evt.Id</td>
    <td>@evt.Name</td>
    <td>@evt.Description</td>
    <td>@evt.Date</td>
    <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@evt.Id">Edit Event</a></td>
</tr>
        }
</table>


